<div class="my-4">
    <h3 class="mb-3">Khóa học của tôi</h3>

    <table class="table align-middle">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col">Trình độ</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col">Giá</th>
                <th scope="col">Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            {{#each course}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>{{this.cost}}</td>
                    <td>
                        <a
                            href="/courses/edit/{{this._id}}"
                            class="btn btn-warning"
                        >Sửa</a>
                        <a
                            href="/courses/delete/{{this._id}}"
                            class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#delete-course-modal"
                            data-id="{{this._id}}"
                        >Xóa</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="6" class="text-center">
                        Bạn chưa đăng khóa học nào!
                        <a href="/courses/create">Đăng khóa học</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{! Modal confirm delete course }}
<div id="delete-course-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khóa học</h5>
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa khóa học này?</p>
            </div>
            <div class="modal-footer">
                <button
                    id="btn-delete-course"
                    type="button"
                    class="btn btn-danger"
                >Đồng ý</button>
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                >Hủy</button>
            </div>
        </div>
    </div>
</div>

{{! Form hidden delete course }}
<form name="delete-course-form" method="POST"></form>

<script>
    var courseId; const deleteModal =
    document.getElementById('delete-course-modal'); const btnDeleteCourse =
    document.getElementById("btn-delete-course"); const formDelete =
    document.forms['delete-course-form'];
    deleteModal.addEventListener('show.bs.modal', event => { var button =
    event.relatedTarget; courseId = button.getAttribute('data-id'); });
    btnDeleteCourse.onclick = () => { formDelete.action = "/courses/" + courseId
    + "?_method=DELETE"; formDelete.submit(); }
</script>