<div class="mt-4">
    <div class="row">
        <h4 class="mb-3 fw-bolder">Các khóa học</h4>
        {{#each courses}}
            <div class="col-sm-6 col-lg-4">
                <div class="card mb-4">
                    <a href="courses/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" />
                    </a>
                    <div class="card-body">
                        <a href="courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text card_description">{{this.description}}</p>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>